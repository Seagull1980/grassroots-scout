{
  "version": 2,
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://grassroots-scout-backend-production-7b21.up.railway.app/api/$1"
    },
    {
      "source": "/favicon.ico",
      "destination": "/favicon.svg"
    },
    {
      "source": "/((?!api/|assets/|favicon.svg|manifest.json|sw.js).*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "NODE_ENV": "production",
    "VITE_API_URL": ""
  }
}