# Frontend Production Environment Variables
# API URL - use relative path since backend serves frontend on same domain
VITE_API_URL=/api

# Backend variables below (these are for the server, not Vite)
NODE_ENV=production
PORT=3000

# JWT Secret (generate a secure random string)
JWT_SECRET=your-secure-jwt-secret-key-here-change-this

# Team Roster Port (not needed on Railway as we use single port)
TEAM_ROSTER_PORT=3002

# Database Configuration
DB_TYPE=sqlite

# Email Configuration (for password reset, email verification)
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-specific-password
EMAIL_FROM=noreply@grassrootshub.com

# Google Maps API Key (for maps feature)
GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# Base URL (Railway will provide this)
BASE_URL=https://your-app.railway.app

# Frontend URL (same as BASE_URL on Railway)
FRONTEND_URL=https://your-app.railway.app
